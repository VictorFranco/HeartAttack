<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_register"
    style="@style/matchmatch"
    tools:context="mx.ipn.heartattack.StartOptions"
    android:padding="@dimen/Padding_dialog">
    <RelativeLayout
        style="@style/matchwarp">
        <TextView
            android:id="@+id/title_registry"
            android:text="@string/txt_check_in"
            android:layout_marginBottom="@dimen/Margin_10dp"
            style="@style/Title"
            android:textSize="35sp"/>
        <EditText
            android:id="@+id/registry_name"
            android:layout_below="@id/title_registry"
            style="@style/Edit"
            android:hint="@string/txt_name"
            android:inputType="text"/>
        <EditText
            android:id="@+id/registry_user"
            style="@style/Edit"
            android:layout_below="@+id/registry_name"
            android:hint="@string/txt_user"
            android:inputType="text"/>
        <EditText
            android:id="@+id/registry_email"
            style="@style/Edit"
            android:layout_below="@+id/registry_user"
            android:hint="@string/txt_email"
            android:inputType="textEmailAddress" />
        <EditText
            android:id="@+id/registry_age"
            style="@style/Edit"
            android:layout_below="@+id/registry_email"
            android:hint="@string/txt_age"
            android:inputType="number" />
        <EditText
            android:id="@+id/registry_password"
            style="@style/Edit"
            android:layout_below="@+id/registry_age"
            android:layout_marginBottom="@dimen/Margin_10dp"
            android:hint="@string/txt_password"
            android:inputType="textPassword" />
        <Button
            android:id="@+id/btn_registry"
            style="@style/Btn_start_options"
            android:layout_below="@+id/registry_password"
            android:text="@string/txt_get_in" />
    </RelativeLayout>
</ScrollView>