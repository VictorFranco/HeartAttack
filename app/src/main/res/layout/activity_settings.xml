<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/matchmatch"
    tools:context=".Settings">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/txt_settings"
                style="@style/Title"
                android:text="Settings" />
            <TableLayout
                android:id="@+id/profile_data_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_settings"
                android:layout_centerHorizontal="true">
                <TableRow>
                    <TextView
                        android:text="@string/txt_name"/>
                    <EditText
                        android:id="@+id/settings_name"
                        style="@style/Edit"
                        android:inputType="text"
                        android:layout_width="200dp"
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="@string/txt_user"/>
                    <EditText
                        android:id="@+id/settings_user"
                        style="@style/Edit"
                        android:inputType="text"
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="@string/txt_email"/>
                    <EditText
                        android:id="@+id/settings_email"
                        style="@style/Edit"
                        android:inputType="textEmailAddress"
                        android:text=""/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:text="@string/txt_password"/>
                    <EditText
                        android:id="@+id/settings_password"
                        style="@style/Edit"
                        android:text=""/>
                </TableRow>
            </TableLayout>
            <Button
                android:id="@+id/btn_data_save"
                android:layout_marginTop="@dimen/Long_35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_data_table"
                android:layout_centerHorizontal="true"
                android:text="save" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>