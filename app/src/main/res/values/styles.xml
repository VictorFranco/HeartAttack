<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="StartImage">
        <item name="android:layout_width">@dimen/Start_image_start_width</item>
        <item name="android:layout_height">@dimen/Start_image_start_height</item>
        <item name="android:layout_marginTop">@dimen/Margin_10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Start_Title_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Title_questionnaires">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/Title_questionnaires_size</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/Btn_sp</item>
        <item name="android:padding">@dimen/Button_Padding_10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Btn_start_options">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/Btn_sp</item>
        <item name="android:padding">@dimen/Button_Padding_10dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Btn_options">
        <item name="android:layout_width">@dimen/Btn_options_w</item>
        <item name="android:layout_height">@dimen/Btn_options_h</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/Size_sp_30sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Btn_options_question">
        <item name="android:layout_width">@dimen/Btn_options_w</item>
        <item name="android:layout_height">@dimen/Btn_options_question_h</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">@dimen/Size_sp_30sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Btn_capital_letter">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">@dimen/Button_Padding_10dp</item>
        <item name="android:textSize">@dimen/Btn_sp</item>
    </style>

    <style name="Edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Edit_width_60dp</item>
        <item name="android:textSize">@dimen/Edit_txt_size_30sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CardView_settings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Edit_settings">
        <item name="android:layout_width">@dimen/Edit_width_200dp</item>
        <item name="android:layout_height">@dimen/Edit_width_60dp</item>
        <item name="android:textSize">@dimen/Edit_txt_size_30sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CardView_home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Img_home">
        <item name="android:layout_width">@dimen/Img_home_w</item>
        <item name="android:layout_height">@dimen/Img_home_h</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/Img_home_margin</item>
        <item name="android:src">@drawable/heart_in_the_body</item>
    </style>

    <style name="TextView_home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:padding">@dimen/txt_home_padding</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Table_home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/Margin_10dp</item>
        <item name="android:layout_marginRight">@dimen/Margin_10dp</item>
        <item name="android:background">@color/green_light</item>
        <item name="android:stretchColumns">*</item>
    </style>

    <style name="Table_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="Button_TableRow_home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/Table_button_40dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="View_Table_home">
        <item name="android:layout_height">@dimen/Margin_3dp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="matchwarp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="matchmatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="warpwarp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="warpmatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <style name="img_flipper">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="view_flipper">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/View_flipper_h</item>
        <item name="android:layout_margin">@dimen/Margin_10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="Relative_button_Table_heart">
        <item name="android:layout_weight">@dimen/Weight_33</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="ImageView_Table_heart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/Margin_0dp</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="View_Table_heart">
        <item name="android:layout_width">@dimen/Width_.1dp</item>
        <item name="android:layout_height">@dimen/Long_35dp</item>
        <item name="android:background">@color/color_purple</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">@dimen/Weight_.5</item>
    </style>
    <style name="TextView_Table_heart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_purple</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>
    <style name="TextView_Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/Information_Heart_Title</item>
    </style>
    <style name="TextView_sub">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/Information_Heart_Sub</item>
    </style>
    <style name="TextView_txt">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/Information_Heart_Txt</item>
    </style>
    <style name="Table_heart">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/Table_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="Information_Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="Btn_information">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">50dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/btn_inf_dark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <dimen name="Table_button_40dp">40dp</dimen>
    <dimen name="txt_home_padding">7dp</dimen>
</resources>